generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FixUser {
  fix_user_id Int         @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String      @unique
  roles       RolesEnum[]
  password    String
  created_at  DateTime?   @default(now()) @db.Timestamptz(6)
  updated_at  DateTime?   @default(now()) @db.Timestamptz(6)
}

enum RolesEnum {
  Admin
  Tech
  User
  Moderator
}
